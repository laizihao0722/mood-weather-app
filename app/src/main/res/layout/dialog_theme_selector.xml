<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="选择新的主题颜色"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="?attr/textColorPrimary"
    android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnThemeHealingDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="治愈系主题 (默认)"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/healing_primary" />

    <Button
        android:id="@+id/btnThemeDarkDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="暗黑系主题"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/dark_primary"/>

    <Button
        android:id="@+id/btnThemeEnergyDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="活力系主题"
        android:backgroundTint="@color/energy_primary"/>

</LinearLayout>