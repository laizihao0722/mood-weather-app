<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.MoodWeather" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.MoodWeather" parent="Base.Theme.MoodWeather" />

    <attr name="backgroundColor" format="color" />
    <attr name="textColorPrimary" format="color" />
    <attr name="primaryColor" format="color" />
    <attr name="customCardBackground" format="color" />

    <style name="Theme.MoodWeather.Healing" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="backgroundColor">@color/healing_background</item>
        <item name="textColorPrimary">@color/black</item>
        <item name="primaryColor">@color/healing_primary</item>
        <item name="customCardBackground">@color/white</item>

        <item name="colorPrimary">@color/healing_primary</item>
        <item name="colorSecondary">@color/healing_primary</item>
        <item name="android:statusBarColor">@color/healing_primary</item>
    </style>

    <style name="Theme.MoodWeather.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="backgroundColor">@color/dark_background</item>
        <item name="textColorPrimary">@color/white</item>
        <item name="primaryColor">@color/dark_primary</item>
        <item name="customCardBackground">#2E2E2E</item>

        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/dark_primary</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

    </style>

    <style name="Theme.MoodWeather.Energy" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="backgroundColor">@color/energy_background</item>
        <item name="textColorPrimary">@color/black</item>
        <item name="primaryColor">@color/energy_primary</item>
        <item name="customCardBackground">@color/white</item>

        <item name="colorPrimary">@color/energy_primary</item>
        <item name="colorSecondary">@color/energy_primary</item>
        <item name="android:statusBarColor">@color/energy_primary</item>
    </style>

    <style name="Theme.MoodWeather.Sweet" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="backgroundColor">@color/sweet_background</item>
        <item name="textColorPrimary">@color/black</item>
        <item name="primaryColor">@color/sweet_primary</item>
        <item name="customCardBackground">@color/white</item>

        <item name="colorPrimary">@color/sweet_primary</item>
        <item name="colorSecondary">@color/sweet_primary</item>
        <item name="android:statusBarColor">@color/sweet_primary</item>
    </style>

    <style name="Theme.MoodWeather.Warm" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="backgroundColor">@color/warm_background</item>
        <item name="textColorPrimary">@color/black</item>
        <item name="primaryColor">@color/warm_primary</item>
        <item name="customCardBackground">@color/white</item>

        <item name="colorPrimary">@color/warm_primary</item>
        <item name="colorSecondary">@color/warm_primary</item>
        <item name="android:statusBarColor">@color/warm_primary</item>
    </style>

    <style name="Theme.MoodWeather.Blue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="backgroundColor">@color/blue_background</item>
        <item name="textColorPrimary">@color/black</item>
        <item name="primaryColor">@color/blue_primary</item>
        <item name="customCardBackground">@color/white</item>

        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorSecondary">@color/blue_primary</item>
        <item name="android:statusBarColor">@color/blue_primary</item>
    </style>

    <style name="AnalysisCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">?attr/customCardBackground</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="AnalysisSectionTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="AnalysisSectionTitleSmall" parent="AnalysisSectionTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#607D8B</item> <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="AnalysisSectionContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

</resources>